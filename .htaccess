<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # ============================================
  # REDIRECTION HTTPS (PRIORITÉ ABSOLUE)
  # ============================================
  
  # Forcer HTTPS - Rediriger toutes les requêtes HTTP vers HTTPS
  RewriteCond %{HTTPS} off
  RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
  
  # Rediriger www vers non-www (ou inversement selon votre préférence)
  RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
  RewriteRule ^(.*)$ https://%1/$1 [R=301,L]
  
  # ============================================
  # PROTECTION CONTRE LES BOTS ET ATTAQUES
  # ============================================
  
  # Bloquer les tentatives d'attaque WordPress
  RewriteCond %{REQUEST_URI} wp-admin [NC,OR]
  RewriteCond %{REQUEST_URI} wp-login [NC,OR]
  RewriteCond %{REQUEST_URI} wordpress [NC,OR]
  RewriteCond %{REQUEST_URI} wp-content [NC,OR]
  RewriteCond %{REQUEST_URI} wp-includes [NC]
  RewriteRule ^(.*)$ - [F,L]
  
  # Bloquer les scripts malveillants connus
  RewriteCond %{REQUEST_URI} (lkk_ch|twint_ch|setup-config\.php) [NC]
  RewriteRule ^(.*)$ - [F,L]
  
  # Bloquer les tentatives d'accès aux fichiers sensibles
  RewriteCond %{REQUEST_URI} \.(env|git|svn|htaccess|htpasswd|ini|log|sh|sql|bak|backup|config|conf)$ [NC]
  RewriteRule ^(.*)$ - [F,L]
  
  # Bloquer les tentatives d'accès aux répertoires système
  RewriteCond %{REQUEST_URI} (\.git|\.svn|node_modules|vendor|storage|database) [NC]
  RewriteRule ^(.*)$ - [F,L]
  
  # ============================================
  # RÈGLES VUE.JS (HISTORY MODE)
  # ============================================
  
  RewriteRule ^index\.html$ - [L]
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule . /index.html [L]
</IfModule>

# ============================================
# CONFIGURATION SSL/TLS
# ============================================
# Note: Les directives SSLProtocol et SSLCipherSuite nécessitent généralement
# l'accès root au serveur. Si elles ne fonctionnent pas, contactez votre hébergeur.
# Sur certains hébergements partagés, ces directives peuvent être ignorées.
<IfModule mod_ssl.c>
  # Désactiver les protocoles obsolètes (TLS 1.0 et 1.1)
  # Ces protocoles sont considérés comme non sécurisés
  SSLProtocol all -SSLv2 -SSLv3 -TLSv1 -TLSv1.1
  
  # Forcer TLS 1.2 et 1.3 uniquement (protocoles modernes et sécurisés)
  SSLProtocol +TLSv1.2 +TLSv1.3
  
  # Cipher suites modernes et sécurisées
  # Utilise uniquement les algorithmes de chiffrement les plus sûrs
  SSLCipherSuite ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384
  
  # Préférer les cipher suites du serveur (meilleure sécurité)
  SSLHonorCipherOrder on
  
  # Session cache pour améliorer les performances
  SSLSessionCache shmcb:/var/cache/mod_ssl/scache(512000)
  SSLSessionCacheTimeout 300
</IfModule>

# ============================================
# HEADERS DE SÉCURITÉ AMÉLIORÉS
# ============================================
<IfModule mod_headers.c>
  # HSTS (HTTP Strict Transport Security) - Force HTTPS pendant 1 an
  # Inclut les sous-domaines et permet le preload
  Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
  
  # Prévenir le clickjacking
  Header always set X-Frame-Options "SAMEORIGIN"
  
  # Prévenir le MIME type sniffing
  Header always set X-Content-Type-Options "nosniff"
  
  # Activer la protection XSS
  Header always set X-XSS-Protection "1; mode=block"
  
  # Referrer Policy - Contrôle les informations de referrer envoyées
  Header always set Referrer-Policy "strict-origin-when-cross-origin"
  
  # Content Security Policy (CSP)
  # Ajustez selon vos besoins spécifiques
  # Permet les ressources depuis votre domaine, CDNs, et le backend
  Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.jsdelivr.net https://cdnjs.cloudflare.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdnjs.cloudflare.com; font-src 'self' https://fonts.gstatic.com https://cdnjs.cloudflare.com; img-src 'self' data: https:; connect-src 'self' https://backend.creffpme.org https://*.creffpme.org; frame-ancestors 'self';"
  
  # Permissions Policy (anciennement Feature Policy)
  # Désactive certaines fonctionnalités du navigateur pour améliorer la sécurité
  Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
  
  # Empêcher le cache pour index.html (important pour Vue.js)
  <FilesMatch "index\.html$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "0"
  </FilesMatch>
  
  # Cache optimisé pour les assets statiques
  <FilesMatch "\.(css|js|jpg|jpeg|png|gif|ico|svg|woff|woff2|ttf|eot|webp)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
</IfModule>

# ============================================
# PROTECTION CONTRE LES LISTINGS DE RÉPERTOIRES
# ============================================
Options -Indexes

# ============================================
# PROTECTION DES FICHIERS SENSIBLES
# ============================================
<FilesMatch "^\.">
  Order allow,deny
  Deny from all
</FilesMatch>

# ============================================
# OPTIMISATION ET COMPRESSION
# ============================================
<IfModule mod_expires.c>
  ExpiresActive On
  
  # Images
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/x-icon "access plus 1 year"
  
  # CSS et JavaScript
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType text/javascript "access plus 1 month"
  
  # Fonts
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType font/ttf "access plus 1 year"
  ExpiresByType font/eot "access plus 1 year"
  
  # Autres
  ExpiresByType application/pdf "access plus 1 month"
  ExpiresByType application/json "access plus 0 seconds"
</IfModule>

# Compression GZIP pour améliorer les performances
<IfModule mod_deflate.c>
  # Compresser les fichiers HTML, CSS, JavaScript, XML, JSON
  AddOutputFilterByType DEFLATE text/html
  AddOutputFilterByType DEFLATE text/plain
  AddOutputFilterByType DEFLATE text/xml
  AddOutputFilterByType DEFLATE text/css
  AddOutputFilterByType DEFLATE text/javascript
  AddOutputFilterByType DEFLATE application/javascript
  AddOutputFilterByType DEFLATE application/json
  AddOutputFilterByType DEFLATE application/xml
  AddOutputFilterByType DEFLATE application/xhtml+xml
  AddOutputFilterByType DEFLATE application/rss+xml
  AddOutputFilterByType DEFLATE application/atom+xml
  AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

# ============================================
# PROTECTION SUPPLÉMENTAIRE
# ============================================

# Désactiver la signature du serveur
<IfModule mod_headers.c>
  Header unset Server
  Header unset X-Powered-By
</IfModule>

# Protection contre les injections SQL et XSS dans les URLs
<IfModule mod_rewrite.c>
  RewriteCond %{QUERY_STRING} (\<|%3C).*script.*(\>|%3E) [NC,OR]
  RewriteCond %{QUERY_STRING} GLOBALS(=|\[|\%[0-9A-Z]{0,2}) [OR]
  RewriteCond %{QUERY_STRING} _REQUEST(=|\[|\%[0-9A-Z]{0,2})
  RewriteRule ^(.*)$ - [F,L]
</IfModule>
